{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Tomato Boat",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      },
      "fs": {
        "scope": {
          "allow": [
            "/etc/hosts",
            "$HOME/Library/Caches/Google/Chrome/Default",
            "$HOME/Library/Caches/Google/Chrome/com.google.Chrome",
            "$HOME/Library/Caches/Firefox/Profiles",
            "$HOME/Library/Caches/com.apple.Safari",
            "$HOME/Library/Containers/com.apple.Safari/Data/Library/Caches"
          ]
        }
      }
    },
    "bundle": {
      "active": true,
      "targets": "dmg",
      "identifier": "com.naiwensu.tomatoboat",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png"
      ],
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Tomato Boat",
        "minWidth": 700,
        "minHeight": 500
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false
    }
  }
}
